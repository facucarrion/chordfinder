---
import { ViewTransitions } from 'astro:transitions'
import '@fontsource-variable/montserrat'
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>ChordFinder</title>

    <ViewTransitions />
  </head>

  <body
    class='flex flex-col gap-6 bg-background text-primary items-center px-4 min-h-screen w-full'
  >
    <header
      class='w-full max-w-[1000px] gap-4 flex flex-col justify-between pt-6'
    >
      <h1 class='text-6xl font-semibold'>
        <a href='/'>ChordFinder</a>
      </h1>
    </header>

    <slot />

    <footer class='py-4'>
      <p class='text-center text-lg'>
        Made with ❤️ by{' '}
        <a href='https://facucarrion.netlify.app' class='underline'>
          Facundo Carrion
        </a>
      </p>
    </footer>

    <style>
      :root {
        font-family:
          'Montserrat Variable',
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          'Segoe UI',
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          'Open Sans',
          'Helvetica Neue',
          sans-serif;

        scrollbar-gutter: stable;
      }
    </style>
  </body>
</html>
