---
import notes from '../data/notes.json'

interface Props {
  active?: string
}

const { active } = Astro.props
---

<nav
  class='w-full max-w-[62.5rem] flex gap-2 px-4 py-2 bg-primary rounded-lg text-background'
>
  {
    notes.map(note => (
      <a
        class={`flex items-center font-medium text-2xl px-4 py-1 rounded-lg justify-center flex-1 ${note.link.replace('/', '') === active && 'bg-background text-primary'}`}
        href={`${note.link}`}
      >
        {note.label.toUpperCase()}
      </a>
    ))
  }
</nav>
