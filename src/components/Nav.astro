---
import notes from '../data/notes.json'

interface Props {
  active?: string
}

const { active } = Astro.props
---

<nav
  class='w-full max-w-[62.5rem] grid grid-rows-3 grid-cols-4 sm:grid-rows-2 sm:grid-cols-6 lg:grid-cols-12 lg:grid-rows-1 gap-2 px-4 py-2 bg-primary rounded-lg text-background'
>
  {
    notes.map(note => (
      <a
        class={`flex items-center font-medium text-2xl px-4 py-1 rounded-lg justify-center ${note.link.replace('/', '') === active && 'bg-background text-primary'}`}
        href={`${note.link}`}
      >
        {note.label.toUpperCase()}
      </a>
    ))
  }
</nav>
